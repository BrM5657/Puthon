b = float(input("Введите вторую строку: "))
c = float(input("Введите третью строку: "))

if a <= 0 or b <= 0 or c <= 0:
    print(False)
elif (a + b + c) and (a + c > b ) and (b + c > a):
    print(True)
else:
    print(False)

